/*
 * Nextflow config for SRA Prefetch and FASTQ pipeline
 */

nextflow.enable.dsl = 2

params {
    ngc_file = null
    sra_list_file = null
    convert_to_fastq = false
    threads = 4
    disk_size = 500
    outdir = "results"
}

process {
    container = "quay.io/biocontainers/sra-tools:3.0.3--h87f3376_0"
    cpus = 4
    memory = '16 GB'
    disk = '500 GB'
}

docker {
    enabled = true
}

singularity {
    enabled = false
}

manifest {
    name = 'prefetch-and-fastq-dump'
    author = 'Cirro Custom Pipelines'
    description = 'Download SRA files and optionally convert to FASTQ'
    version = '1.0.0'
    nextflowVersion = '>=22.10.0'
}

timeline {
    enabled = true
    file = "${params.outdir}/pipeline_info/timeline.html"
}

report {
    enabled = true
    file = "${params.outdir}/pipeline_info/report.html"
}

trace {
    enabled = true
    file = "${params.outdir}/pipeline_info/trace.txt"
}

