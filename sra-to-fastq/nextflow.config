/*
 * Nextflow config for SRA to FASTQ pipeline
 */

// Enable DSL 2
nextflow.enable.dsl = 2

// Default parameters
params {
    input_dir = null
    threads = 4
    outdir = "results"
}

// Process defaults
process {
    // Default container
    container = "quay.io/biocontainers/sra-tools:3.0.3--h87f3376_0"
    
    // Default resources
    cpus = 4
    memory = '16 GB'
}

// Container engine settings
docker {
    enabled = true
}

singularity {
    enabled = false
}

// Manifest for pipeline metadata
manifest {
    name = 'sra-to-fastq'
    author = 'Your Name'
    description = 'Convert SRA files to FASTQ using fasterq-dump'
    version = '1.0.0'
    nextflowVersion = '>=22.10.0'
}

// Timeline and reports (Cirro captures these)
timeline {
    enabled = true
    file = "${params.outdir}/pipeline_info/timeline.html"
}

report {
    enabled = true
    file = "${params.outdir}/pipeline_info/report.html"
}

trace {
    enabled = true
    file = "${params.outdir}/pipeline_info/trace.txt"
}
